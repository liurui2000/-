<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".mvp.ui.activity.MessageHuiyuanActivity">
    <RelativeLayout
        android:background="#454545"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="会员消息"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:id="@+id/huiyuan_title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="＜"
            android:id="@+id/huiyuan_back"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <ImageView
        android:layout_centerInParent="true"
        android:src="@drawable/ser_message_icon"
        android:layout_width="120dp"
        android:id="@+id/ibs"
        android:layout_height="100dp">
    </ImageView>
    <TextView
        android:layout_below="@+id/ibs"
        android:text="会员等级变更提醒、会员生日福利"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:background="@drawable/drawblack2"
        android:text="随便逛逛"
        android:textColor="#fff"
        android:id="@+id/huiyuan_guang"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_height="50dp">

    </Button>

</RelativeLayout>